mkill() { kill "$(pidof -x "$1")" ;}
alias netusb='sudo wpa_supplicant -iwlp0s20f0u2 -c network/ziru.conf -D wext -B;sudo dhclient -4 wlp0s20f0u2'
alias neton='sudo ip link set wlp3s0 up;sudo wpa_supplicant -iwlp3s0 -c network/ziru.conf -B;sudo dhclient -4 wlp3s0;echo "nameserver 114.114.114.114" | sudo tee /etc/resolv.conf'
alias netup='sudo wpa_supplicant -iwlp3s0 -c network/ziru.conf -B;sudo dhclient -4'
alias netdown='sudo killall wpa_supplicant; sudo killall dhclient'
alias netoff='sudo killall wpa_supplicant; sudo killall dhclient'
alias reboot='sudo killall dhclient; reboot'
alias poweroff='sudo killall dhclient; sudo systemctl poweroff'
alias rewin='sudo grub-reboot "Windows 10";reboot'
alias screenshot='scrot'
#alias mpv='impv'
impv(){ 
P_LIST=( "$@" )
#echo "the number of parameter is $#"
for ((i=0; i<$#; i+=2))
do
    if [[ $# -gt 1 ]]
    then
        #echo "this is the first parameter: ${P_LIST[0]}"
        if [[ "${P_LIST[$i+1]}" == *.srt || "${P_LIST[$i+1]}" == *.ass ]]
        then
            mpv "${P_LIST[$i]}" --sub-file="${P_LIST[$i+1]}"
        else impv_music "$@"; break
        fi
    else mpv "$@"
    fi
done
}

impv_music(){
mpv "$@"
}
export CE="简体\&英文.ass"
export PATH=$PATH:/var/lib/snapd/snap/bin
