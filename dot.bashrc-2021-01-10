alias volume_control='pavucontrol'
alias standby='sleep 1&&xset dpms force standby'
alias mv='mv -i'
alias cp='cp -i'
PATH=$PATH:/usr/bin/v2ray/
#alias 'mpv -s'='mpv --sub-file'
export TLDR_COLOR_BLANK="white"
export TLDR_COLOR_NAME="cyan"
