set editor=ex
set sendmail=/usr/bin/sendmail
set spoolfile=/home/jusss/Mail/
set folder=/home/jusss/Mail/
set record=/home/jusss/Mail/sent/
set mbox_type=Maildir
set check_new=yes
set timeout=60
set mail_check=20
my_hdr From:l@jusss.org
my_hdr Reply-TO:l@jusss.org
set envelope_from=yes
set from=l@jusss.org
set realname=l
set use_from=yes
charset-hook !UTF-8 gb2312
set rfc2047_parameters=yes
set charset="utf-8"
set send_charset="utf-8"
set mime_forward=yes
set mime_forward_rest=yes
unalternative_order *
alternative_order text/html text/plain
set index_format="%4C %Z %{!%b %d %Y} %-18.18F [%4c]%?X?*& ? %s"
set status_on_top=yes
auto_view application/msword application/pdf application/vnd.oasis.opendocument.text text/html
set include=yes
set resolve=yes
set pager_stop=yes
set menu_scroll=yes
set pager_index_lines=6
set forward_format="Fwd: %s"
set tilde=yes
set sort=reverse-threads
set sort_aux=last-date-sent
# ---------------------Color theme-----------------------------------
